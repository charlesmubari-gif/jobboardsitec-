<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - JobBoard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container">
        <a class="navbar-brand" href="/">JobBoard</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/">Jobs</a></li>
            </ul>

            <form class="d-flex me-3" method="get" action="/Home/Index">
                <input class="form-control me-2" name="q" placeholder="Search jobs..." />
                <button class="btn btn-outline-success">Search</button>
            </form>

            <ul class="navbar-nav">
                @if (Context.Session.GetInt32("UserId") is int uid)
                {
                    <li class="nav-item"><span class="nav-link">Hello @Context.Session.GetString("UserName")</span></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Logout">Logout</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Applications/MyApplications">My Applications</a></li>
                    @{
                        var role = Context.Session.GetString("UserRole");
                        if (role == "Employer")
                        {
                            <li class="nav-item"><a class="nav-link" href="/Jobs/Create">Post Job</a></li>
                        }
                    }
                }
                else
                {
                    <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Register">Register</a></li>
                }
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    @RenderBody()
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
