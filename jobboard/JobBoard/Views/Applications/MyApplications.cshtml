@model IEnumerable<JobBoard.Models.JobApplication>
@{
    ViewData["Title"] = "My Applications";
}
<h2>My Applications</h2>

<table class="table">
    <thead><tr><th>Job</th><th>Applied</th><th>CV</th><th>Cover</th></tr></thead>
    <tbody>
    @foreach(var a in Model)
    {
        <tr>
            <td>@a.Job?.Title</td>
            <td>@a.AppliedAt.ToLocalTime().ToString("yyyy-MM-dd")</td>
            <td>
                @if (!string.IsNullOrEmpty(a.CvFilePath))
                {
                    <a href="@a.CvFilePath" target="_blank">Download CV</a>
                }
            </td>
            <td>@a.CoverLetter</td>
        </tr>
    }
    </tbody>
</table>
